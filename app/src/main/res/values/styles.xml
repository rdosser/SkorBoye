<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MeterNumberPickerStyle">
        <item name="mnp_min">0</item>
        <item name="mnp_max">6</item>
        <item name="mnp_textColor">@color/black</item>
        <item name="mnp_textSize">50sp</item>
        <item name="mnp_paddingHorizontal">20dp</item>
        <item name="mnp_paddingVertical">15dp</item>
    </style>

    <style name="MeterViewStyle">
        <item name="mv_firstColor">@color/white</item>
        <item name="mv_numberOfFirst">1</item>
        <item name="mv_numberOfSecond">0</item>
        <item name="mv_pickerStyle">@style/MeterNumberPickerStyle</item>
        <item name="mv_secondColor">@color/colorAccent</item>
    </style>

</resources>
